<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".view.MainActivity">

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CRUD Escola"
            android:gravity="center"
            android:textSize="25dp"
            android:layout_margin="20dp"
            />

        <com.google.android.material.button.MaterialButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="Novo aluno"
                android:onClick="clicar"
                android:id="@+id/btnInserirAlunos"
                style="@style/Widget.MaterialComponents.Button"/>

        <com.google.android.material.button.MaterialButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="Alunos cadastrados"
                android:onClick="clicar"
                android:id="@+id/btnListarAlunos"
                style="@style/Widget.MaterialComponents.Button"/>

        <com.google.android.material.button.MaterialButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:onClick="clicar"
                android:text="Nova disciplina"
                android:id="@+id/btnInserirDisciplina"
                style="@style/Widget.MaterialComponents.Button"/>

    <com.google.android.material.button.MaterialButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:onClick="clicar"
            android:text="Disciplinas por aluno"
            android:id="@+id/btnListaDisciplinas"
            style="@style/Widget.MaterialComponents.Button"/>

        <com.google.android.material.button.MaterialButton
                android:layout_width="match_parent"
                android:layout_margin="5dp"
                android:layout_height="wrap_content"
                android:text="Sair do aplicativo"
                android:onClick="clicar"
                android:id="@+id/btnSair"
                style="@style/Widget.MaterialComponents.Button"/>



</LinearLayout>